<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
      <% Newitem.forEach(function(result){ %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox"  onChange = "this.form.submit()" name="deleteItem" value="<%=result._id %>">
          <p> <%= result.name %> </p>
        </div>
        </form>
    <%  }); %>
    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value= <%=listTitle %> >+</button>
    </form>
</div>
<%- include("footer") -%>
